<Window x:Class="InkCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InkCanvas" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <StackPanel>
        <InkCanvas Background="LightYellow" EditingMode="Ink">
            <Image Source="./office.jpg" InkCanvas.Top="10" InkCanvas.Left="10" Width="640" Height="400"/>
        </InkCanvas>
        <Button Width="80" BorderThickness="0" Height="50">
            <Button.Background>
                <ImageBrush ImageSource="office.jpg"/>
            </Button.Background>
        </Button>
    </StackPanel>
</Window>
