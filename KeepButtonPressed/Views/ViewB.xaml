<UserControl x:Class="KeepButtonPressed.Views.ViewB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeepButtonPressed.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid>
        <StackPanel>
            <Button Content="Button" Height="50"/>
            <Button Height="300" Content="ShowDialog" Command="{Binding ShowDialogCommand}" Background="YellowGreen"/>
        </StackPanel>
    </Grid>
</UserControl>
